<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.attendencef">

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="330dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/light_purple_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/linear1"
                android:layout_width="180dp"
                android:layout_height="150dp"
                android:background="#F1EBFD"
                android:elevation="15dp"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView

                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="5dp"
                     />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:text="0.12"
                    android:fontFamily="sans-serif-black"
                    android:textSize="20dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"

                    android:gravity="center"
                    android:text="Average Working Hour"
                    android:textSize="16dp" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear2"
                android:layout_width="180dp"
                android:layout_height="150dp"
                android:background="#F1EBFD"
                android:elevation="15dp"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="5dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:text="2:34 PM"
                    android:fontFamily="sans-serif-black"
                    android:textSize="20dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"

                    android:gravity="center"
                    android:text="Average In Time"
                    android:textSize="16dp" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear3"
                android:layout_width="180dp"
                android:layout_height="150dp"
                android:background="#F1EBFD"
                android:elevation="15dp"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@+id/linear1">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="5dp"
                     />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:text="2:41 PM"
                    android:fontFamily="sans-serif-black"
                    android:textSize="20dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"

                    android:gravity="center"
                    android:text="Average Out Time"
                    android:textSize="16dp" />


            </LinearLayout>


            <LinearLayout
                android:id="@+id/linear4"
                android:layout_width="180dp"
                android:layout_height="150dp"
                android:layout_marginTop="15dp"
                android:background="#F1EBFD"
                android:elevation="15dp"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@+id/linear2">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="5dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:fontFamily="sans-serif-black"
                    android:text="01:00"
                    android:textSize="20dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"


                    android:gravity="center"
                    android:text="Average Break Time"
                    android:textSize="16dp" />


            </LinearLayout>


            <androidx.constraintlayout.helper.widget.Flow
                android:id="@+id/flow2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:layout_marginBottom="10dp"
                android:orientation="horizontal"
                app:constraint_referenced_ids="linear1,linear2,linear3,linear4"
                app:flow_maxElementsWrap="2"
                app:flow_wrapMode="chain"
                app:layout_constraintBottom_toTopOf="@+id/linear4"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.51"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="350dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:elevation="15dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frameLayout" >


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            >

            <LinearLayout
                android:id="@+id/linear5"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:elevation="15dp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="3dp"
                    android:background="#F1EBFD"
                    android:fontFamily="sans-serif-black"
                    android:gravity="center"
                    android:text="Employee Name (ID)"

                    android:textSize="12dp" />

                <TextView
                    android:layout_width="55dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="3dp"
                    android:background="#F1EBFD"
                    android:fontFamily="sans-serif-black"
                    android:gravity="center"
                    android:text="Date"
                    android:textSize="12dp" />

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="3dp"
                    android:background="#F1EBFD"
                    android:fontFamily="sans-serif-black"
                    android:gravity="center"
                    android:text="Time in"
                    android:textSize="12dp" />

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="3dp"
                    android:background="#F1EBFD"
                    android:fontFamily="sans-serif-black"
                    android:gravity="center"
                    android:text="Time out"
                    android:textSize="12dp" />

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="3dp"
                    android:background="#F1EBFD"
                    android:fontFamily="sans-serif-black"
                    android:gravity="center"
                    android:text="Status"
                    android:textSize="12dp" />

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:background="#F1EBFD"
                    android:fontFamily="sans-serif-black"
                    android:gravity="center"
                    android:text="Action"
                    android:textSize="12dp" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/linear6"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:elevation="15dp"
                android:layout_marginTop="3dp"
                android:orientation="horizontal"

                app:layout_constraintTop_toBottomOf="@+id/linear5">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="3dp"
                    android:gravity="center"
                    android:text="Harsh (562365)"
                    android:textSize="10dp" />

                <TextView
                    android:layout_width="55dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="3dp"
                    android:gravity="center"
                    android:text="18-03-2025"
                    android:textSize="10dp" />

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="3dp"
                    android:gravity="center"
                    android:text="02:28 PM"
                    android:textSize="10dp" />

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="3dp"
                    android:gravity="center"
                    android:text="02:39 PM"
                    android:textSize="10dp" />

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="25dp"
                    android:layout_marginRight="3dp"
                    android:gravity="center"
                    android:backgroundTint="#c19a6b"
                    android:text="Leave"
                    android:textSize="10dp" />

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:gravity="center"


                    android:paddingLeft="15dp"
                    android:textSize="12sp" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/linear7"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:elevation="15dp"
                android:orientation="horizontal"
                android:layout_marginTop="3dp"
                app:layout_constraintTop_toBottomOf="@+id/linear6">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="3dp"
                    android:gravity="center"
                    android:text="Shubham (562365)"
                    android:textSize="10dp" />

                <TextView
                    android:layout_width="55dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="3dp"
                    android:gravity="center"
                    android:text="18-03-2025"
                    android:textSize="10dp" />

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="3dp"
                    android:gravity="center"
                    android:text="02:28 PM"
                    android:textSize="10dp" />

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="3dp"
                    android:gravity="center"
                    android:text="02:39 PM"
                    android:textSize="10dp" />

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="25dp"
                    android:layout_marginRight="3dp"
                    android:gravity="center"
                    android:backgroundTint="#c19a6b"

                    android:text="Leave"
                    android:textSize="10dp" />

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingLeft="15dp"

                    android:textSize="12dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:elevation="15dp"
                android:orientation="horizontal"
                android:layout_marginTop="3dp"
                app:layout_constraintTop_toBottomOf="@+id/linear7">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="3dp"
                    android:gravity="center"
                    android:text="Kajal (562365)"
                    android:textSize="10dp" />

                <TextView
                    android:layout_width="55dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="3dp"
                    android:gravity="center"
                    android:text="18-03-2025"
                    android:textSize="10dp" />

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="3dp"
                    android:gravity="center"
                    android:text="02:28 PM"
                    android:textSize="10dp" />

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="3dp"
                    android:gravity="center"
                    android:text="02:39 PM"
                    android:textSize="10dp" />

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="25dp"
                    android:layout_marginRight="3dp"
                    android:gravity="center"

                    android:backgroundTint="#c19a6b"

                    android:text="Leave"
                    android:textSize="10dp" />

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingLeft="15dp"

                    android:textSize="12dp" />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>







</androidx.constraintlayout.widget.ConstraintLayout>